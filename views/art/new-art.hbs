<h1>New Art</h1>
<div class="form-new-art">

  <form action="/arts/create" method="POST" enctype="multipart/form-data">

    <label class="name-new-art">
      Name:
      <input type="text" name="name" />
    </label>
    <br>

    <label class="">
      Description:
      <input type="text" name="description" />
    </label>
    <br>


    <label>
      Type:
      <select name="type">
        <option>Monument</option>
        <option>Museum</option>
        <option>Theater</option>
      </select>
    </label>
    <br>
    

    <label>
      Image:
      <input type="file" name="image" class="form-control-file" />
    </label>
    <br>


    Location:
    
      <input type="text" id="address" class="address">
      <button class="submit">enviar</button>
        <br>

    <span class="latitudeCenter">40.4206213320784</span>
    <span class="longitudeCenter">-3.706324171610527</span>
    <div id="map"></div>


    <label class="labelLocation-art">
      Location:
      <input type="text" name="lat"  class="latitudeText"/>
      <input type="text" name="lng" class="longitudeText" />
    </label>


    <label>
      Website:
      <input type="text" name="webSite" />
    </label>
    <br>

    <label>
      Opening Time:
      <input type="text" name="openingTime" />
    </label>
    <br>

    <label>
      ClosingTime:
      <input type="text" name="closingTime" />
    </label>
    <br>

    <input type="submit" />

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>

  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}


</div>


<script src="../../js/main.js"> </script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA2EY6nvc3be8-6agfTwW2PNHPH0GX3dg8&callback=initMapNew"></script>