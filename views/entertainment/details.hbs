<div class="container container-details">


<h1 class="ent-details-title">Entertainment Details</h1>


<div class="ent-details">

<div class="ent-namePrice">
  <div class="ent-name">

<strong class="details-title">{{ent.name}}</strong>
<br/>
</div>

<div class="ent-price">
<strong>  
<b/>
<i>{{ent.type}}</strong></i>
<br/>
</div>
</div>


<div class="ent-musicType">
      <div class="ent-typeof">
        Type of Music:
      </div>
  <div class="musicType">
<strong> {{ent.caracteristics.musicType}}</strong>
</div>
<br/>

<div class="ent-typeof">
Price:
</div>
<div class="ent-type">
<strong>{{ent.price}}</strong>
<br/>
</div>
</div>
</div>

<div class="content-details">
  <div class="div-details">

<img src="{{ent.image}}" class="image-details" />

  </div>
  <div class="div-details">
<div id="map"></div>
  </div>
</div>




<span class="latitudeCenter">{{ent.location.coords.[0]}}</span>
<span class="longitudeCenter">{{ent.location.coords.[1]}}</span>
<h3>Reviews<hr></h3>
<br>

{{#each reviews}}
<div class="review-card">

<strong>{{creator.username}}</strong>

<p>{{comment}}</p>
<span>{{formatDate}}</span>


{{#if ../isAdmin}}
  <a href="/reviews/delete/{{_id}}/{{../ent.id}}">Delete</a>
{{/if}}
</div>
{{/each}}


<h4>Write a Review</h4>
<form method="POST" action="/reviews/create/{{ent.id}}">
  <textarea name="comment" type="textarea"></textarea>
<input type="submit" value="Send" class="btn btn-danger">
</form>

<a href="/ent/all-ent">Back</a>
<a href="/ent/edit/{{ent.id}}">Edit</a>
<a href="/ent/{{ent.id}}/delete">Delete</a>


</div>
