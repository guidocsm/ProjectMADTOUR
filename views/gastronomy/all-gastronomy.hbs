<h1 class="all-arts">Gastronomy</h1>

<div class="buttons-all">
<a href="/gastronomy/create" class="infoButtons">Create new</a>

<a href="/profile-page" class="infoButtons" >Back to menu</a>
</div>



<div class="container container-all">
{{#each gasts}}
  <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="{{image}}" alt="Card image cap" />
      <div class="card-body">
        <h5 class="card-title"> {{name}}</h5>
        <p class="card-text"><strong>Price</strong>: {{price}}</p>
        <a href="/gastronomy/details/{{id}}" class="btn btn-dark">Details</a>
      </div>
    </div>
{{/each}}



</div>