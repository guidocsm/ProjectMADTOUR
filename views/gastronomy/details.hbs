<div class="container container-details">


<h1 class="gastronomy-details">Details</h1>

Name:
<strong class="interestName">{{gastronomy.name}}</strong>
<br />

Type of place:
{{gastronomy.type}}
<br>
Type of Food:
{{gastronomy.caracteristics.food}}
<br />

<div class="content-details">
  <div class="div-details">

<img src="{{gastronomy.image}}" />

  </div>
  <div class="div-details">
<div id="map"></div>
  </div>
</div>





<span class="latitudeCenter">{{gastronomy.location.coords.[0]}}</span>
<span class="longitudeCenter">{{gastronomy.location.coords.[1]}}</span>

<form method="POST" action="/reviews/create/{{gastronomy.id}}">
  Write a review:
  <input name="comment" type="textarea">
  <input type="submit">
</form>

<h3>Reviews</h3>
{{#each reviews}}
<div class="review-card">

<strong>{{creator.username}}</strong>
<p>{{comment}}</p>
<span>{{formatDate}}</span>

{{#if ../isAdmin}}
  <a href="/reviews/delete/{{_id}}/{{../gastronomy.id}}">Delete</a>
{{/if}}
</div>
{{/each}}




<a href="/gastronomy/edit/{{id}}">Edit</a>
<a href="/gastronomy/{{id}}/delete">Delete</a>



</div>

